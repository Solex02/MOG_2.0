<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TuActividad"
        android:background="@drawable/desktop_wallpaper_carbon_fiber_22241_px">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="568dp"
            android:layout_above="@id/bottom_navigation"
            android:layout_below="@+id/d"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp"
            android:background="@color/grey">

            <ListView
                android:id="@+id/listviewPrincipal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>



        <FrameLayout
            android:id="@+id/hiloabajo"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_above="@id/bottom_navigation"
            android:background="@drawable/desktop_wallpaper_carbon_fiber_22241_px">

        </FrameLayout>




        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            style="@style/MyBottomNavigationView"
            app:menu="@menu/menu_bottom_navigation"
            />

        <RelativeLayout
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@color/greyf"
            android:orientation="vertical"
            tools:context=".TuActividad">

            <TextView
                android:id="@+id/textView"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="29dp"
                android:layout_toEndOf="@+id/imageView2"
                android:fontFamily="@font/alfa"
                android:text="Motorship Official Galery"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="50px" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="72dp"
                android:layout_height="63dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="50px"
                android:layout_marginTop="8dp"

                android:src="@drawable/iogo" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>