<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TuActividad">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="576dp"
            android:layout_above="@id/bottom_navigation"
            android:background="@color/black">

            <FrameLayout
                android:id="@+id/hiloarriba"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginBottom="567dp"
                android:background="@drawable/photo_1545873681_d8affd67677b">

            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/hiloabajo"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_above="@id/bottom_navigation"
            android:background="@drawable/desktop_wallpaper_carbon_fiber_22241_px">

        </FrameLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/textura_fondo_lienzo_papel_viejo_667511_453"
            app:menu="@menu/menu_bottom_navigation" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/textura_fondo_lienzo_papel_viejo_667511_453"
            android:orientation="vertical"
            tools:context=".TuActividad"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="29dp"
                android:layout_toEndOf="@+id/imageView2"
                android:fontFamily="@font/alfa"
                android:text="Motorship Official Galery"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="50px" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="72dp"
                android:layout_height="63dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="50px"
                android:layout_marginTop="8dp"

                android:src="@drawable/iogo" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>